{% extends "layout.html" %}
{% block content %}
  {{ parent() }} 



<div id="modal" >
</div>


  <table id="unit_table" class="tablesorter">
    <thead>
    <tr>
      <th style="display:none;">id</th>
      <th>Name</th>
      <th>mineral</th>
      <th>gas</th>
      <th>supply</th>
      <th>build</th>
      <th>life</th>
      <th>sields </th>
      <th>energy</th>
      <th>armor</th>
      <th>speed</th>
      <th>sight</th>
      <th>race</th>
      <th>image_url</th>
    <tr>
    </thead>
    <tbody>
  {% for u in units %}
    {% if u.id > 0 %}
    <tr>
    <td style="display:none;"><a href="{{app['root']}}/unit/{{u.id}}">{{ u.id }}</a></td>
    <td class="unit_name" data-url="{{app['root']}}/unit/{{u.id}}">{{ u.name }}</td>
    <td>{{ u.mineral }}</td>
    <td>{{ u.gas  }}</td>
    <td>{{ u.supply }}</td>
    <td>{{ u.buildtime }}</td>
    <td>{{ u.life  }}</td>
    <td>{{ u.sields }}</td>
    <td>{{ u.energy }}</td>
    <td>{{ u.armor }}</td>
    <td>{{ u.movement_speed }}</td>
    <td>{{ u.sight_range }}</td>
    <td>{{ u.race }} </td>
    <td>{{ u.image_url }}</td>
    </tr>
    {% endif %}
  {% else %}
      No units have been found.
  {% endfor %}
  </tbody>
  </table>
{% endblock %}
